<div class="container-fluid">

  <div class="col-md-1">

    <div class="avatar">
      <%= link_to "#" do %>
          <%= image_tag current_user.avatar(60), class: "image-circle" %>
          <%= current_user.name %>
      <% end %>
    </div>
  </div>
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="comment_input">
      <%= form_for(Comment.new(:course_id => course.id, :user_id => current_user.id), remote: true) do |f| %>
          <%= f.hidden_field :course_id %>
          <%= f.hidden_field :user_id %>
          <%= f.text_area :content %>
          <%= submit_tag '提交评论', class: 'btn btn-primary btn-submit' %>
      <% end %>
    </div>
  </div>
</div>
