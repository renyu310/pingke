<% if logged_in? %>
    <div class="row">
      <aside class="col-md-4 user_info">
        <section>
          <%= render 'shared/user_info' %>
        </section>
        <section class="micropost_form">
          <%= render 'shared/micropost_form' %>
        </section>
      </aside>
      <div class="col-md-8">
        <h3>同学动态</h3>
        <%= render 'shared/feed' %>
      </div>
    </div>
<% else %>
    <div class="center jumbotron">
      <h1>欢迎来到国科大课程评论网！</h1>
      <h2>
        在这里你可以和你的朋友同学分享你的课程和学习心得！
      </h2>
      <%= link_to "注册!", sign_up_path, class: "btn btn-lg btn-primary" %>
    </div>
<% end %>