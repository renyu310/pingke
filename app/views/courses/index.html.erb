<div class="container-fluid">
  <div class="row">
    <h1>课程列表
      <small>
        <% if current_user %>
            <% if current_user.admin? %><%= link_to "新增课程", new_course_path %>
                </small>
            <% end %>
        <% end %>
        </h1>
  </div>
  <div class="row">
    <hr>
  </div>
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-4">
      <%= form_tag('search', remote: true) do %>
          <%= text_field_tag :keywd, '', :class => 'form-control' %>
          </div>
          <div class="col-md-1">
            <%= submit_tag "搜索", class: "btn btn-default" %>
          </div>

      <% end %>
      </div>
</div>

<%= render partial: 'filter_courses' %>

<div class="row">
  <hr>
</div>
<div class="row">
  <div class="col-md-1"></div>
  <div class="col-md-10">
    <ul id="courses">
      <%= render partial: "search_result", locals: {courses: @courses} %>
    </ul>
  </div>
</div>
