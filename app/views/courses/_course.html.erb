<li>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2">
        <%= course.course_num %>
      </div>
      <div class="col-md-2">
        <%= link_to(course.name, course_path(course)) %>
      </div>
      <div class="col-md-2">
        <%= course.course_type %>
      </div>

      <% if current_user && current_user.admin? %>
          <div class="col-md-2">
            <%= link_to("删除", course_path(course), method: :delete, data: {confirm: true, remote: true}) %>
          </div>
          <div class="col-md-2">
            <%= link_to("更新", edit_course_path(course)) %>
          </div>
          <%else%>
          <div class="col-md-2">
            <%= link_to("去评论", course_path(course)) %>
          </div>
      <% end %>
      <div class="col-md-2">
      赞数：<%= course.zan %>
    </div>
    </div>
    
  </div>
  <hr>
</li>