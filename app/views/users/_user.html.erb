<li>
  <div class="container-fluid">
  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <%= gravatar_for(user,50) %>
      <div class="username">
      <%= link_to user.name, user %>
        </div>
    </div>
    <div class="col-md-3">
      <% if current_user.admin? && !current_user?(user) %>
          | <%= link_to "删除", user, method: :delete,
                        data: { confirm: "确定要删除吗?" } %>
      <% end %>
    </div>
  </div>
</div>
</li>